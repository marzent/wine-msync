+};
+
+static inline void resize_wait_objs( struct msync **wait_objs, int *count )
+{
+    int read_index = 0;
+    int write_index = 0;
+
+    for (; read_index < *count; read_index++)
+    {
+        if (wait_objs[read_index] != NULL)
+        {
+            if (read_index != write_index)
+                wait_objs[write_index] = wait_objs[read_index];
+            write_index++;
+        }
+    }
+    *count = write_index;
+}
